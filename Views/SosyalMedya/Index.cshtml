@using BusranurCirikCv.Models.Entity
@model List<TblSosyalMedya>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Sosyal Medya</h2>
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <!-- /.card-header bordered-->
                        <div class="card-body">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th style="width: 10px">ID</th>
                                        <th>Sosyal Medya</th>
                                        <th>Link</th>
                                        <th>Durumu</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var i in Model)
                                    {
                                    <tr>
                                        <td>@i.ID</td>
                                        <td>@i.Ad</td>
                                        <td>@i.Link</td>
                                        <td>@i.Durum</td>
                                        <td>
                                            <a class="btn btn-danger btn-sm" href="/SosyalMedya/SosyalMedyaSil/@i.ID"> <i class="fas fa-trash-alt"></i></a>
                                            <a class="btn btn-info btn-sm" href="/SosyalMedya/SosyalMedyaGuncelle/@i.ID"> <i class="fas fa-pencil-alt"></i></a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                            <br />
                            <button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">Yeni Sosyal Medya Hesabı Ekle</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="modal" id="Modal1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">Yeni Sosyal Medya Hesabı Ekle</h2>
                </div>
                <form action="/SosyalMedya/SosyalMedyaEkle" method="post">
                    <div class="modal-body" >
                        <input type="text" name="Ad" placeholder="Sosyal Medya Adı" class="form-control"/> <br />
                        <input type="text" name="Link" placeholder="Sosyal Medya Linki" class="form-control"/> <br />
                        <input type="text" name="İkon" placeholder="Sosyal Medya İkonu" class="form-control"/> <br />
                        <button class="btn-info">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

